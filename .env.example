APP_NAME="F1 Predictions"
APP_ENV=local
APP_KEY=
APP_DEBUG=false
APP_URL=http://formula1predictions.test

# First admin setup (for deploy):
# Set these in Railway secrets or .env, then run: php artisan db:seed --class=AdminSeeder
ADMIN_EMAIL=your-admin@example.com
ADMIN_PASSWORD=your-secure-password-here
ADMIN_NAME=Your Name

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

LOG_CHANNEL=stack
# Production: set LOG_STACK=daily for log rotation
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
# Production: set LOG_LEVEL=warning or error to avoid exposing sensitive data
LOG_LEVEL=debug

# Database Configuration
# Local development: SQLite (default)
DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# Production/Railway MySQL: Uncomment and set these, or use DATABASE_URL
# DB_CONNECTION=mysql
# DB_HOST=${MYSQLHOST}
# DB_PORT=${MYSQLPORT}
# DB_DATABASE=${MYSQLDATABASE}
# DB_USERNAME=${MYSQLUSER}
# DB_PASSWORD=${MYSQLPASSWORD}
# DB_CONNECT_TIMEOUT=10  # seconds before failing (avoids 30s hang when DB unreachable)

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
# Production (HTTPS): leave unset when APP_URL uses https (auto-detected),
# or set to true explicitly when serving over HTTPS behind a proxy / load balancer.
SESSION_SECURE_COOKIE=
SESSION_PATH=/
# SESSION_DOMAIN: leave unset for default (cookie scoped to current host). Set only if you need a specific domain.

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
CACHE_STORE=database

# Production: set MAIL_MAILER=resend (or smtp/mailgun/ses) and configure so notifications reach users.
# Resend: MAIL_MAILER=resend, RESEND_KEY=re_xxx, and verify MAIL_FROM_ADDRESS domain in Resend dashboard.
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
# RESEND_KEY=re_xxxxxxxxxxxx

# Hosting: Railway. File storage uses local disk (FILESYSTEM_DISK=local).

VITE_APP_NAME="${APP_NAME}"

# F1 Configuration
F1_MAX_DRIVERS=22
F1_MAX_TEAMS=11
F1_DEFAULT_APPEARANCE=system


